root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.{js,mjs,cjs,ts,jsx,tsx}]
indent_size = 2
indent_style = space

[*.{json,yml,yaml}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[{package.json,*.lock}]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab

[Dockerfile*]
indent_size = 2
indent_style = space
